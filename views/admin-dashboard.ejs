<h1>Admin Dashboard</h1>
<a href="/admin/logout">Logout</a>

<table border="1" cellpadding="10">
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Description</th>
        <th>Status</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>

    <% issues.forEach(issue => { %>
    <tr>
        <td><%= issue.name %></td>
        <td><%= issue.location %></td>
        <td><%= issue.description %></td>
        <td><%= issue.status %></td>
        <td>
            <% if (issue.image) { %>
                <img src="/uploads/<%= issue.image %>" width="80">
            <% } else { %> No Image <% } %>
        </td>
        <td>
            <a href="/admin/edit/<%= issue._id %>">Edit</a>
        </td>
    </tr>
    <% }) %>
</table>
